---
import { ViewTransitions } from 'astro:transitions';
import { Github, Mail } from 'lucide-astro';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-TW" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=Playfair+Display:wght@700;900&display=swap" rel="stylesheet">
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<nav class="fixed top-0 w-full z-50 bg-brand-dark/70 backdrop-blur-md border-b border-white/10">
			<div class="max-w-6xl mx-auto px-6 h-16 flex items-center justify-between">
				<a href="/" class="text-2xl font-serif font-black tracking-tighter text-white">MAPROFILE.</a>
				<div class="flex gap-8 items-center font-semibold text-sm">
					<a href="/projects" class="hover:text-brand-primary transition-colors">專案成果</a>
					<a href="/posts" class="hover:text-brand-primary transition-colors">技術日誌</a>
					<div class="hidden md:flex gap-4 items-center pl-4 border-l border-white/20 text-slate-400">
						<Github size={20} />
						<Mail size={20} />
					</div>
				</div>
			</div>
		</nav>

		<main class="pt-16 min-h-screen">
			<slot />
		</main>

		<footer class="py-12 border-t border-white/5 text-center">
			<p class="text-slate-500 text-sm font-medium">
				&copy; {new Date().getFullYear()} MAPROFILE. 數位研究空間
			</p>
		</footer>
	</body>
</html>